public class Oops4 {
    public static void main(String[] args) {
        int a = 7;
        int b = 42;
        minimum(a, b);
        if (minimum = a) {
            System.out.println("a is the smallest!");
        }
    }

    public static int minimum(int a, int b) {
        if (a < b) {
            return a;
        }
        else {
            return b;
        }
        
    }
}
